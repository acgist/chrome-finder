{
	"name": "Chrome-Finder",
	"version": "1.0.0",
	"description": "Chrome浏览器多关键词搜索",
	"homepage_url": "https://gitee.com/acgist/chrome-finder",
	"manifest_version": 2,
	"icons": {
		"16": "icon_16.png",
		"48": "icon_32.png",
		"128": "icon_32.png"
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"permissions": [
		"tabs",
		"storage",
		"contextMenus",
		"notifications",
		"http://*/*",
		"https://*/*"
	],
	"browser_action": {
		"default_icon": {
			"19": "icon_16.png",
			"38": "icon_32.png"
		},
		"default_title": "Chrome-Finder",
		"default_popup": "popup.html"
	},
	"content_scripts": [
		{
			"js": [
				"finder.js"
			],
			"css": [
				"finder.css"
			],
			"run_at": "document_start",
			"matches": [
				"<all_urls>"
			]
		}
	]
}